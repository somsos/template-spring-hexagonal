pipeline {

  agent any

  stages {
      
      stage('1. build') {
        steps {
            echo 'build says hello';
            sleep 3
            echo 'build says bye';
        }
      }


      stage('2. deploy') {
        steps {
            echo 'deploy says hello';
            sleep 3
            echo 'deploy says bye';
        }
      }

  }

}